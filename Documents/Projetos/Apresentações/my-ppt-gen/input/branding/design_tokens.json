        "secondary": {
          "bg": "transparent",
          "border": "1px solid #00CF80",
          "text": "#1A2D45",
          "radius": "24px"
        }
      },
      "card": {
        "bg": "#FFFFFF",
        "border": "1px solid #DFE2E6",
        "radius": "8px"
      }
    }
