      "card": "0px 4px 14px rgba(0, 0, 0, 0.05)",
      "hover": "0px 6px 20px rgba(0, 0, 0, 0.08)",
      "sidebar": "2px 0px 10px rgba(0, 0, 0, 0.03)"
    },
    "components": {
      "button": {
        "primary": {
          "bg": "#1A2D45",
          "text": "#FFFFFF",
          "radius": "24px",
          "padding": "10px 24px"
