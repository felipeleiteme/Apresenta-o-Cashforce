  "pptx_mappings": {
    "slide_dimensions": {
      "width": 10,
      "height": 7.5,
      "units": "inches"
    },
    "fonts": {
      "heading": "DM Sans Bold",
      "body": "DM Sans",
      "fallback": "Arial"
