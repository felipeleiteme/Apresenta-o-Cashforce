      "weights": {
        "regular": 400,
        "medium": 500,
        "bold": 700
      },
      "sizes": {
        "h1": "48px",
        "h2": "32px",
        "h3": "24px",
        "body_large": "18px",
        "body": "14px",
        "caption": "12px"
      },
      "line_height": {
        "heading": "1.2",
        "body": "1.5"
      }
    },
    "spacing": {
      "xs": "4px",
